{
	"name": "svelte-konva",
	"version": "0.0.1",
	"author": {
		"name": "TeyKey1"
	},
	"description": "A Svelte wrapper for Konva",
	"homepage": "https://teykey1.github.io/svelte-konva",
	"bugs": {
		"url": "https://github.com/TeyKey1/svelte-konva/issues"
	},
	"repository": "github:TeyKey1/svelte-konva",
	"keywords": [
		"konva",
		"svelte",
		"canvas"
	],
	"license": "MIT",
	"scripts": {
		"dev": "set NODE_ENV=development&& vite dev",
		"build-app": "set NODE_ENV=production&& vite build",
		"preview": "vite preview",
		"build": "set NODE_ENV=production&& svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"plop": "plop",
		"prepack": "plop",
		"predev": "plop",
		"test": "jest src",
		"test:watch": "npm run test -- --watch"
	},
	"peerDependencies": {
		"canvas": ">=2",
		"konva": ">=8"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.44",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "next",
		"@tailwindcss/typography": "^0.5.7",
		"@testing-library/svelte": "3.1.3",
		"@types/jest": "^29.1.2",
		"@types/lodash.clonedeep": "^4.5.7",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"canvas": "^2.10.1",
		"daisyui": "^2.31.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"jest": "^29.1.2",
		"jest-environment-jsdom": "^29.1.2",
		"konva": "^8.3.13",
		"lodash.clonedeep": "^4.5.0",
		"plop": "^3.1.1",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-highlight": "^6.2.1",
		"svelte-jester": "^2.3.2",
		"svelte-local-storage-store": "^0.3.1",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.8",
		"ts-jest": "^29.0.3",
		"tslib": "^2.3.1",
		"typescript": "^4.8.4",
		"vite": "^3.1.0"
	},
	"type": "module",
	"jest": {
		"transform": {
			"^.+\\.svelte$": [
				"svelte-jester",
				{
					"preprocess": "./svelte.config.js"
				}
			],
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"svelte"
		],
		"moduleNameMapper": {
			"^\\$lib(.*)$": "<rootDir>/src/lib$1"
		},
		"testEnvironment": "jsdom"
	}
}
